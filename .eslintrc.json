{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "google"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 1,
    "linebreak-style": [
      "error",
      "windows"
    ],
    "max-len": [
      "warn",
      120
    ],
    "require-jsdoc": 0,
    "comma-dangle": 0,
    "no-console": 0
  }
}